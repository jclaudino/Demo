<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <com.baboolian.demo.ui.view.DynamicHeightImageView
        android:id="@+id/item_thumbnail_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/item_thumbnail_video_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_play_video"
        android:backgroundTint="?attr/colorAccent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_thumbnail_selected_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_thumbnail_bg_selector" />

</FrameLayout>
